@model ContaBancaria
@{
    ViewData["Title"] = "Editar Conta";
}

<head>
    <link href="~/css/leandro.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<form asp-action="EditConta" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center mb-3">
        <div class="col-auto text-center">
            <div class="container">
                <div class="tabs">
                    <input class="form-check-input radio-1" type="radio" id="tipoCorrente" name="Tipo" value="1"
                        checked />
                    <label class="tab" for="tipoCorrente">Corrente</label>

                    <input class="form-check-input radio-2" type="radio" id="tipoPoupanca" name="Tipo" value="2" />
                    <label class="tab" for="tipoPoupanca">Poupança</label>

                    <input class="form-check-input radio-3" type="radio" id="tipoSalario" name="Tipo" value="3" />
                    <label class="tab" for="tipoSalario">Salário</label>

                    <input class="form-check-input radio-4" type="radio" id="tipoInvestimento" name="Tipo" value="4" />
                    <label class="tab" for="tipoInvestimento">Investimento</label>

                    <span class="glider"></span>
                </div>
                <span asp-validation-for="Tipo" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-3">
        <div class="col-auto text-center">
            <div class="container">
                <div class="tabs">
                    <input class="form-check-input" type="radio" id="ativoSim" name="Ativa" value="true" @(Model.Ativa ? "checked" : "") />
                    <label class="tab" for="ativoSim">Ativo</label>

                    <input class="form-check-input" type="radio" id="ativoNao" name="Ativa" value="false" @(!Model.Ativa ? "checked" : "") />
                    <label class="tab" for="ativoNao">Inativo</label>

                    <span class="glider"></span>
                </div>
                <span asp-validation-for="Ativa" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col md-2">
            <label asp-for="Descricao" class="control-label">Descrição</label>
            <input asp-for="Descricao" class="input" id="DescricaoConta" maxlength="25"/>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="col md-2">
            <label asp-for="NumeroConta" class="control-label">Número da Conta</label>
            <input asp-for="NumeroConta" class="input" id="NumeroConta" />
            <span asp-validation-for="NumeroConta" class="text-danger"></span>
        </div>

        <div class="col md-2">
            <label asp-for="DigitoConta" class="control-label">Digito Conta</label>
            <input asp-for="DigitoConta" class="input" id="DigitoConta" maxlength="2"/>
            <span asp-validation-for="DigitoConta" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col md-2">
            <label asp-for="Agencia" class="control-label">Agência</label>
            <input asp-for="Agencia" class="input" id="Agencia" />
            <span asp-validation-for="Agencia" class="text-danger"></span>
        </div>

        <div class="col md-2">
            <label asp-for="DigitoAgencia" class="control-label">Digito Agência</label>
            <input asp-for="DigitoAgencia" class="input" id="DigitoAgencia" />
            <span asp-validation-for="DigitoAgencia" class="text-danger"></span>
        </div>

        <div class="col md-2">
            <label asp-for="Banco" class="control-label">Banco</label>
            <input asp-for="Banco" class="input" id="Banco" />
            <span asp-validation-for="Banco" class="text-danger"></span>
        </div>

        <div class="col md-1" style="max-width: 185px; min-width: 110px;">
            <label class="form-label">Saldo</label>
            <input class="input" value="@Model.Saldo" disabled />
        </div>
    </div>


    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/dist/Notificacao.bundle.js"></script>
    <script src="~/js/dist/vendors.bundle.js"></script>
}

@{
    Layout = null;
    var isLoginPage = Context.Request.Path.StartsWithSegments("/Login", StringComparison.OrdinalIgnoreCase);
}
@if (ViewBag.NotificacaoSucesso != null)
{
    <script>window.__notificacao_sucesso = '@ViewBag.NotificacaoSucesso';</script>
}
@if (ViewBag.NotificacaoAlerta != null)
{
    <script>window.__notificacao_alerta = '@ViewBag.NotificacaoAlerta';</script>
}
@if (ViewBag.NotificacaoErro != null)
{
    <script>window.__notificacao_erro = '@ViewBag.NotificacaoErro';</script>
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Financeiro</title>

    <!-- Fontes Google -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet" />

    <!-- Ícones FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS (framework principal) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Select2 CSS (select customizado com busca) -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />


    <!-- CSS customizado do projeto -->
    <link href="~/css/leandro.css" rel="stylesheet" />

    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@@emotion/react@11.14.0/dist/emotion-react.umd.min.js"></script>
    <script src="https://unpkg.com/@@emotion/styled@11.14.1/dist/emotion-styled.umd.min.js"></script>

    <!-- CSS para sidebar responsivo e ajustes gerais -->
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        #wrapper {
            min-height: 100%;
            display: flex;
        }

        #accordionSidebar {
            min-height: 100%;
        }

        #content-wrapper {
            display: flex;
            flex-direction: column;
            width: 100%;
            min-height: 100%;
        }

        #content {
            flex: 1 0 auto;
        }

        footer.sticky-footer {
            flex-shrink: 0;
        }

        .navbar .page-title {
            margin-right: auto;
            padding-left: 1rem;
            font-size: 1.4rem;
            font-weight: 600;
        }

    </style>

    @RenderSection("Styles", required: false)
</head>

<body id="page-top">
    <!-- Wrapper -->
    <div id="wrapper" class="d-flex">
        @if (!isLoginPage)
        {
            <partial name="_Sidebar" />
        }
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                @if (!isLoginPage)
                {
                    <partial name="_Topbar" view-data="ViewData" />
                }
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright">
                        <span>&copy; @DateTime.Now.Year - Financeiro</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- SCRIPTS: Ordem é importante! -->

    <!-- jQuery (base para plugins) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap JS (componentes do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Select2 JS (select customizado) -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- DataTables JS (tabelas avançadas) -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>

    <!-- jQuery Mask Plugin (máscaras de input) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <!-- JS utilitário do projeto (máscaras, placeholders, buscas, etc) -->
    <script src="~/js/form-utils.js"></script>

    <!-- JS do tema (customizações do template) -->
    <script src="~/js/sb-admin-2.min.js"></script>

    <div id="notificacao_root" ></div>

    @RenderSection("Scripts", required: false)
</body>

</html>

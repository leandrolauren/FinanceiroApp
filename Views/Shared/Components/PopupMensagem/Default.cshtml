@model string
@{
    var tipo = ViewBag.Tipo as string;
    var cor = tipo == "erro" ? "bg-danger" : "bg-success";
}

<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed top-0 end-0 p-3" style="right: 0 !important; z-index: 1100;">
        <div class="toast align-items-center text-white @cor border-0 show" role="alert" aria-live="assertive" aria-atomic="true" id="toast-alert">
            <div class="d-flex">
                <div class="toast-body">
                    @Model
                </div>
                <button type="button" class="btn p-0 m-0 border-0 bg-transparent text-white fs-7 ms-2" data-bs-dismiss="toast" aria-label="Fechar">X</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastEl = document.getElementById('toast-alert');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl, { delay: 4000 });
                toast.show();
            }
        });
    </script>
}
